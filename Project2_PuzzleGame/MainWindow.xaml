<Window x:Class="Project2_PuzzleGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project2_PuzzleGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseMove="Window_MouseMove">
    <Canvas Name="canvas" Margin="0,0,400,0" Width="400" Height="420">
        <Menu Margin=" 5 5 0 0" BorderBrush="Black" BorderThickness="1" >
            <MenuItem Header="Choose Image" Click="chooseImage_Button_Click" BorderBrush="Black" BorderThickness="1"></MenuItem>
            <MenuItem Header="Information" Click="Information_click" BorderBrush="Black" BorderThickness="1"></MenuItem>
        </Menu>

        <Canvas Name="canvas2" Margin="400,0,0,0" Width="400" Height="420" >
            <Image x:Name="previewImage"></Image>

            
        </Canvas>
    </Canvas>

</Window>
